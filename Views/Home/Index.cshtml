@model IEnumerable<Ecommerce.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2 class="text-center my-4">🛍️ Danh sách sản phẩm</h2>

<div class="container">
    <div class="row">
        @* Kiểm tra Model an toàn trước khi lặp *@
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                // Tất cả khai báo C# đặt bên trong block code, tránh viết @{} lồng trong HTML
                var imageSrc = !string.IsNullOrEmpty(item.ImageUrl)
                ? Url.Content(item.ImageUrl)        // nếu ImageUrl là url hoặc ~/img/...
                : Url.Content("~/img/default.png"); // ảnh mặc định

                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@imageSrc"
                             class="card-img-top"
                             alt="@item.Name"
                             style="height: 200px; object-fit: cover; border-top-left-radius:.5rem; border-top-right-radius:.5rem;" />

                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title text-primary">@item.Name</h5>
                                <p class="card-text text-muted" style="min-height: 50px;">@item.Description</p>
                            </div>

                            <div class="mt-3">
                                <p class="mb-1">
                                    <strong>Giá:</strong>
                                    <span class="text-danger fw-bold">@item.Price.ToString("N0") ₫</span>
                                </p>
                                <p class="text-secondary mb-2"><strong>Danh mục:</strong> @item.Category</p>

                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("Details", "Product", new { id = item.Id })" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> Xem chi tiết
                                    </a>

                                    <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.Id" />
                                        <button type="submit" class="btn btn-success btn-sm w-100">
                                            <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
      @* kết thúc foreach *@
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-info mt-4">
                    Không có sản phẩm nào để hiển thị.
                </div>
            </div>
        }
    </div> @* kết thúc row *@
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
