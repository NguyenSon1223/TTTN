@model IEnumerable<Ecommerce.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2 class="text-center my-4">Danh sách sản phẩm</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p><strong>Giá:</strong> @item.Price.ToString("N0") đ</p>
                        <p><strong>Danh mục:</strong> @item.Category</p>
                        <a href="/Product/Details/@item.Id" class="btn btn-primary btn-sm">Chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
