@model IEnumerable<Ecommerce.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    var categories = ViewBag.Categories as List<string>;
    var selectedCategory = ViewBag.SelectedCategory as string;
}

<div class="container py-4">

    <h2 class="text-center mb-4">Danh sách sản phẩm</h2>

    <!-- Bộ lọc danh mục -->
    <form method="get" asp-action="Index" class="d-flex justify-content-center mb-4">
        <select id="category" name="category" class="form-select w-auto me-2" onchange="this.form.submit()">
            <option value="" (string.IsNullOrEmpty(selectedCategory) ? "selected" : "")>-- Tất cả danh mục --</option>
            @if (categories != null)
            {
                foreach (var c in categories)
                {
                    var isSelected = selectedCategory == c ? "selected" : "";
                    <option value="@c" isSelected>@c</option>
                }
            }
        </select>

        @if (!string.IsNullOrEmpty(selectedCategory))
        {
            <a href="@Url.Action("Index", "Product")" class="btn btn-outline-secondary">Xóa lọc</a>
        }
    </form>

    <!-- Danh sách sản phẩm -->
    <div class="row g-4 justify-content-center">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="~/img/@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title text-truncate">@item.Name</h5>
                            <p class="card-text text-danger fw-bold mb-1">@item.Price.ToString("N0") ₫</p>
                            <p class="text-muted small mb-2">@item.Category</p>
                            <a href="@Url.Action("Details", "Product", new { id = item.Id })" class="btn btn-primary btn-sm">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted mt-5">
                <p>Không có sản phẩm nào trong danh mục này.</p>
            </div>
        }
    </div>
</div>
