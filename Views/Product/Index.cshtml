@model IEnumerable<dynamic>
@{

    ViewData["Title"] = "Danh Sách Sản Phẩm";

    var categories = ViewBag.Categories as IEnumerable<dynamic>;


    string currentCategoryId = ViewData["CurrentCategoryId"]?.ToString() ?? "";

    int currentPage = ViewData["CurrentPage"] as int? ?? 1;
    int totalPages = ViewData["TotalPages"] as int? ?? 1;
}

<style>

</style>

<div class="container mt-4">

    <div class="row g-4">

        <div class="col-lg-3">
            <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
                <div class="card-header bg-danger text-white fw-bold fs-6 py-3">
                    <i class="fas fa-list me-2"></i> DANH MỤC SẢN PHẨM
                </div>

                <ul class="list-group list-group-flush category-list">

                    @* Link Tất Cả Sản Phẩm *@
                    <a href="@Url.Action("Index", "Product")"
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center category-item @(string.IsNullOrEmpty(currentCategoryId) ? "active" : "")">
                        <span class="d-flex align-items-center">
                            <i class="fas fa-cubes me-3" style="color: @(string.IsNullOrEmpty(currentCategoryId) ? "white" : "#dc3545");"></i>
                            Tất Cả Sản Phẩm
                        </span>
                        <i class="fas fa-chevron-right small @(string.IsNullOrEmpty(currentCategoryId) ? "text-white" : "text-muted")"></i>
                    </a>

                    @if (categories != null && categories.Any())
                    {
                        @foreach (var category in categories)
                        {
                            // 3. Sử dụng thuộc tính Id của Category
                            var categoryIdString = category.Id?.ToString() ?? "";
                            bool isActive = categoryIdString == currentCategoryId;

                            <a href="@Url.Action("Index", "Product", new { categoryId = categoryIdString })"
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center category-item @(isActive ? "active" : "")">

                                <span class="d-flex align-items-center">
                                    <i class="fas fa-tag me-3" style="color: @(isActive ? "white" : "#dc3545");"></i>
                                    @category.Name
                                </span>

                                <i class="fas fa-chevron-right small @(isActive ? "text-white" : "text-muted")"></i>
                            </a>
                        }
                    }
                </ul>
            </div>
        </div>

        <div class="col-lg-9">

            @if (Model == null || !Model.Any())
            {
            }
            else
            {
                <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="card shadow-sm border-0 h-100 rounded-3 product-card transition-shadow overflow-hidden">

                                @* 4. Các thuộc tính truy cập đã khớp với Anonymous Type (Id, Name, ImageUrl, Price, CategoryName) *@
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark d-block">
                                    <div class="card-img-top text-center p-3" style="height: 180px; background-color: #f8f9fa;">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="~/img/@item.ImageUrl" alt="@item.Name"
                                                 class="img-fluid"
                                                 style="max-height: 100%; object-fit: contain;" />
                                        }
                                        else
                                        {
                                            <img src="~/img/no-image.png" alt="No image" class="img-fluid" style="max-height: 100%; object-fit: contain;" />
                                        }
                                    </div>
                                </a>

                                <div class="card-body d-flex flex-column p-3">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                        <h6 class="card-title fw-semibold text-truncate mb-2" title="@item.Name">@item.Name</h6>
                                    </a>

                                    <p class="small text-muted mb-1">
                                        <span class="badge bg-info text-dark fw-normal"><i class="fas fa-tag me-1"></i> @item.CategoryName</span>
                                    </p>

                                    <div class="d-flex align-items-center mb-2 mt-auto">

                                        <span class="fs-5 fw-bolder text-danger">
                                            @String.Format("{0:N0}", item.Price) VNĐ
                                        </span>
                                    </div>

                                    <form asp-controller="Cart" asp-action="Add" method="post" class="mt-2">
                                        <input type="hidden" name="productId" value="@item.Id" />
                                        <button type="submit" class="btn btn-success w-100 btn-sm rounded-pill">
                                            <i class="fas fa-cart-plus me-1"></i> Thêm vào giỏ
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                @* Logic phân trang giữ nguyên *@
                @* ... *@
            }
        </div>
    </div>
</div>