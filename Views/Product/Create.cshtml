@model Ecommerce.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🛒 Thêm sản phẩm mới</h2>

    <div class="card shadow-sm border-0 p-4 mx-auto" style="max-width: 600px;">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <!-- Tên sản phẩm -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold">Tên sản phẩm</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Danh mục -->
            <div class="mb-3">
                <label asp-for="Category" class="form-label fw-semibold">Danh mục</label>
                <input asp-for="Category" class="form-control" placeholder="Ví dụ: Điện thoại, Laptop..." />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- Giá -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-semibold">Giá (₫)</label>
                <input asp-for="Price" class="form-control" placeholder="Nhập giá sản phẩm" type="number" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Upload ảnh -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Ảnh sản phẩm</label>
                <input type="file" name="ImageFile" class="form-control" accept="image/*" onchange="previewImage(event)" />
                <small class="text-muted">Chọn ảnh sản phẩm (tự động lưu vào thư mục <b>wwwroot/img</b>).</small>
                <div class="mt-3 text-center">
                    <img id="preview" src="#" alt="Ảnh xem trước" class="img-fluid rounded shadow-sm" style="display:none; max-height:200px;">
                </div>
            </div>

            <!-- Mô tả -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả chi tiết sản phẩm"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Nút hành động -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-save"></i> Lưu sản phẩm
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        // ✅ Hiển thị ảnh preview khi chọn file
        function previewImage(event) {
            const preview = document.getElementById("preview");
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                };
                reader.readAsDataURL(file);
            } else {
                preview.style.display = "none";
            }
        }
    </script>
}
