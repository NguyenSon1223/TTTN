@model Ecommerce.Models.Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">✏️ Chỉnh sửa sản phẩm</h2>

    <div class="card shadow-sm border-0 p-4 mx-auto" style="max-width: 650px;">
        <!-- enctype để cho phép upload file -->
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <!-- Tên sản phẩm -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold">Tên sản phẩm</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Danh mục -->
            <div class="mb-3">
                <label asp-for="Category" class="form-label fw-semibold">Danh mục</label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- Giá -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-semibold">Giá (₫)</label>
                <input asp-for="Price" class="form-control" type="number" min="0" step="1000" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Hình ảnh -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Ảnh sản phẩm</label>

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="text-center mb-3">
                        <img id="previewImage" src="@Model.ImageUrl" alt="Ảnh sản phẩm"
                             class="img-thumbnail shadow-sm"
                             style="max-width: 200px; max-height: 200px;" />
                    </div>
                }
                else
                {
                    <div class="text-center mb-3">
                        <img id="previewImage" src="#" alt="Xem trước ảnh"
                             class="img-thumbnail shadow-sm d-none"
                             style="max-width: 200px; max-height: 200px;" />
                    </div>
                }

                <!-- File input -->
                <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" onchange="previewFile()" />

                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- Mô tả -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả sản phẩm..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Nút hành động -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<!-- Xem trước ảnh -->
<script>
    function previewFile() {
        const fileInput = document.getElementById('ImageFile');
        const preview = document.getElementById('previewImage');
        const file = fileInput.files[0];
        const reader = new FileReader();

        reader.addEventListener("load", function () {
            preview.src = reader.result;
            preview.classList.remove('d-none');
        }, false);

        if (file) {
            reader.readAsDataURL(file);
        }
    }
</script>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
