@model Ecommerce.Models.Cart

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">🛒 Giỏ hàng của bạn</h2>

    @if (Model?.Items != null && Model.Items.Any())
    {
        <table class="table table-bordered text-center align-middle">
            <thead class="table-light">
                <tr>
                    <th>Ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                    <th>Thành tiền</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td><img src="@item.ProductImage" width="80" height="80" style="object-fit:cover;" /></td>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("N0") đ</td>
                        <td>@((item.Quantity * item.Price).ToString("N0")) đ</td>
                        <td>
                            <a asp-action="Remove" asp-route-productId="@item.ProductId" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-3">
            <a asp-action="Clear" class="btn btn-outline-danger">Xóa tất cả</a>
            <a href="/Payment/Create" class="btn btn-success ms-2 px-4 py-2">
                <i class="bi bi-credit-card"></i> Thanh toán qua PayOS
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            Giỏ hàng của bạn đang trống 😢
        </div>
    }
</div>
