@{
    ViewData["Title"] = "Thanh toán thất bại";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg border-0 p-4 mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <i class="bi bi-x-circle text-danger display-1 mb-3"></i>
            <h2 class="fw-bold text-danger mb-3">Thanh toán thất bại</h2>
